<%- include('../partials/header_admin.ejs') %>

<a href="/dashboard">&larr; Back</a>
<div class="admin_title">
    <h2>Add New Post</h2>
</div>

<form action="/add-post" method="POST">
    <label for="title"><b>Title</b></label>
    <input type="text" placeholder="Post Title" name="title">

    <label for="body"><b>Content</b></label>
    <textarea id="mytextarea" name="body"></textarea>

    <label><b>Tags</b></label><br>
    <% tags.forEach(tag => { %>
        <input type="checkbox" id="<%= tag.name %>" name="tags" value="<%= tag._id %>">
        <label for="<%= tag.name %>"><%= tag.name %></label><br>
    <% }) %>

    <input type="submit" value="Add" class="btn">
</form>

<script src="https://cdn.jsdelivr.net/npm/quill@2.0.2/dist/quill.js"></script>
<script src="/js/script.js"></script>